
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<h3> <%= viewTitle %></h3>
<form  action="/addOrEdit" method="POST" autocomplete="off">
<!-- <input type="hidden" name="_id" value="<%= appointment._id %>">  -->  
    <div class="form-group">
        <label>Full Name</label>
       <input type="text" class="form-control" name="fullName" placeholder="Full Name" value= "<%= appointment.fullName %> " >
    
       <div class="text-danger">
            <%= appointment.fullNameError %>
       </div>

    </div><br>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value= "<%= appointment.email %> " >
    
        <div class="text-danger">
            <%= appointment.emailError %>
       </div>
    
    </div><br>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value=" <%= appointment.mobile %> " >
        
        </div><br>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value=" <%= appointment.city %> " >
        </div>
    </div><br>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Doctor Name</label>
            <input type="text" class="form-control" name="docname" placeholder="doctorname" value=" <%= appointment.doctorname%> " >
        </div><br>
        <div class="form-group col-md-6">
            <label>Appointment Date</label>
            <input type="date" class="form-control" name="date" placeholder="Date" value=" <%= appointment.date %> " >
        </div>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-info" onclick="document.location='/list'"><i class="fa fa-database"></i>Book</button>
        <a class="btn btn-secondary" href="/list"><i class="fa fa-list-alt">View All</i></a>
    </div>
</form>